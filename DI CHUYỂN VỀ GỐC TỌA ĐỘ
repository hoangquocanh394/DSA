#include <bits/stdc++.h>
using namespace std;
// bai toan nay lua cho (0,m), hoáº·c (n, 0) khong co chi co2 truong hop dau thoi
int main() {
    int t;
    cin >> t;
    while(t--){
    	int n,m;
    	cin >> n >> m;
    	int dp[n+1][m+1];
    	memset(dp,0,sizeof(dp));
    	dp[0][0]=1;
		for(int i=0;i<=n;i++){
			for(int j=0;j<=m;j++){
				if(i>0) dp[i][j]+=dp[i-1][j];
				if(j>0) dp[i][j]+=dp[i][j-1];
			}
		}
		cout << dp[n][m] << endl;
	}
    return 0;
}
